{
    "name": "particle/validator",
    "type": "library",
    "description": "Flexible and highly usable validation library with no dependencies.",
    "keywords": ["validation", "validator"],
    "homepage": "http://github.com/particle-php/validator",
    "license" : "BSD",
    "authors" : [
        {
            "name": "Berry Langerak",
            "email": "berry@berryllium.nl",
            "role": "developer"
        },
        {
            "name": "Rick van der Staaij",
            "homepage": "http://rickvanderstaaij.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "2.*"
    },
    "autoload": {
        "psr-4": {
            "Particle\\Validator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Particle\\Validator\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
